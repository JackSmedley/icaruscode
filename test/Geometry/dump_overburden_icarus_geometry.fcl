#include "dump_icarus_geometry.fcl"

# override geometry configuration:
services: {
  @table::services
  @table::icarus_overburden_geometry_services
} # services

#
# customization of output
#
services.message.destinations.GeometryLog.filename: "ICARUS_overburden_geometry.txt"

#
# add debug output
#
services.message.destinations.LogDebugFile: {
  threshold: "DEBUG"
  type:      "file"
  filename:  "dump_overburden_icarus_geometry_debug.log"
  append:    false
  categories: {
    default: { limit: -1 }
  }
} # services.message.destinations.LogDebugFile
