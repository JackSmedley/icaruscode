#include "dump_icarus_channelmap.fcl"

# override geometry configuration:
services: {
  @table::services
  @table::icarus_nooverburden_geometry_services
} # services

#
# customization of output
#
services.message.destinations.LogChannelMap.filename: "ICARUS_nooverburden_channelmap.txt"

#
# add debug output
#
services.message.destinations.LogDebugFile: {
  threshold: "DEBUG"
  type:      "file"
  filename:  "dump_nooverburden_icarus_channelmap_debug.log"
  append:    false
  categories: {
    default: { limit: -1 }
  }
} # services.message.destinations.LogDebugFile
