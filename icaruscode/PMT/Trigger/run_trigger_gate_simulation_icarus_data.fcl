#include "run_trigger_gate_simulation_icarus.fcl"


services.DetectorClocksService: @local::icarus_detectorclocks_data_notiming # from services_common_icarus.fcl

physics.prep: [ ]

#physics.trigger_paths: [ triggerAND, triggerOR ]

physics.producers.pmtbaselines.OpticalWaveforms: "daqPMT"
physics.producers.discrimopdaq.OpticalWaveforms: "daqPMT"
# use the baseline from `pmtbaselines` instead of the fixed value
physics.producers.discrimopdaq.Baseline: @erase
physics.producers.discrimopdaq.Baselines: "pmtbaselines"
physics.producers.lvdsgatesAND.IgnoreChannels: [ 1000 ]
physics.producers.lvdsgatesOR.IgnoreChannels: [ 1000 ]

physics.analyzers.effSingleAND.GeneratorTags: []
physics.analyzers.effSingleAND.EnergyDeposits: []

physics.analyzers.effSingleOR.GeneratorTags: []
physics.analyzers.effSingleOR.EnergyDeposits: []

physics.analyzers.effSlidingAND.GeneratorTags: []
physics.analyzers.effSlidingAND.EnergyDeposits: []

physics.analyzers.effSlidingOR.GeneratorTags: []
physics.analyzers.effSlidingOR.EnergyDeposits: []

